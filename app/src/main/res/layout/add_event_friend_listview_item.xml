<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        android:id="@+id/add_event_friend_list_item_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/add_event_friend_list_item_nickname"
        android:layout_toEndOf="@id/add_event_friend_list_item_image"
        android:layout_marginLeft="10dp"
        android:text="NickName"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/add_event_friend_list_item_checkbox"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>